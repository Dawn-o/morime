# API Configuration
JIKAN_API_BASE_URL=https://api.jikan.moe/v4

# Cache Configuration (in seconds)
CACHE_SHORT_TTL=300
CACHE_MEDIUM_TTL=7200
CACHE_LONG_TTL=86400

# Default Limits
DEFAULT_ANIME_LIMIT=24
DEFAULT_MANGA_LIMIT=24
DEFAULT_UPCOMING_LIMIT=6
DEFAULT_SEARCH_LIMIT=20

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Morime

# Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_SFW_FILTER=true
NEXT_PUBLIC_ENABLE_THEME_TOGGLE=true

# Rate Limiting (Jikan API allows 3 req/sec)
# 333ms delay = ~3 requests per second
RATE_LIMIT_DELAY=333
RATE_LIMIT_MAX_RETRIES=5
RATE_LIMIT_RETRY_DELAY=1000
